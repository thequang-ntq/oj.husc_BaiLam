#include <bits/stdc++.h>

using namespace std;

int main() {
    int t ;
    cin >> t ;
    int a = t / 3600;
    t %= 3600;
    int b = t / 60;
    int c = t % 60;
    
    cout << setfill('0') ;
    cout << setw(2) << a << ":" << setw(2) << b
    << ":" << setw(2) << c << endl;
    
    

    return 0;
}
